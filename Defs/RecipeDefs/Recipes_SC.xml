<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef>
        <defName>MakeCompost</defName>
        <label>make compost</label>
        <description>Gather materials to compost.</description>
        <jobString>Gathering materials to compost.</jobString>
        <allowMixingIngredients>true</allowMixingIngredients>
        <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<requiredGiverWorkType>Cooking</requiredGiverWorkType>
        <ingredients>
          <li>
            <filter>
                <categories>
                    <li>FoodRaw</li>
                    <li>PlantFoodRaw</li>
                </categories>
            </filter>
            <count>0.25</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>FoodRaw</li>
                <li>PlantFoodRaw</li>
            </categories>
        </fixedIngredientFilter>
        <products>
            <SC_Compost>1</SC_Compost>
        </products>
		<researchPrerequisite>SimpleCultivation</researchPrerequisite>
        <workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>100</workAmount>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_CookMeal</soundWorking>
		<workSkill>Cooking</workSkill>
        <recipeUsers>
            <li>CraftingSpot</li>
			<li>TableButcher</li>
        </recipeUsers>
    </RecipeDef>

